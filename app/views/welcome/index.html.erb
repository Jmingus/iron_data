<div class="row">
  <div class="col-md-3"><!--Campus-->
  	<h4>Campus Data</h4>
  	<ul>
  		<% @campus.each do |campu| %>

      <ul class="left">
        <li><h5>Campus</h5></li>
 	      <li><%= link_to campu.campus_name, campu_path(campu) %></li>
      </ul>

      <ul class="right">
        <li><h5>Location</h5></li>
 	      <li><%= link_to campu.location, campu_path(campu) %></li>
      </ul>


 	<% end %>
 	</ul>
  
  </div>

  <div class="col-md-3"><!--Students-->
  	
  	<h4>Student Data</h4>
  	<ul>
  		<% @students.each do |student| %>
 	<li><%= link_to student.student_name, student_path(student) %></li>
 	<li><%= link_to student.student_course, student_path(student) %></li>
 	<% end %>
 	</ul>
  </div>


  <div class="col-md-3"><!--Teachers-->
  	<h4>Teacher Data</h4>
  	<ul>
  		<% @teachers.each do |teacher| %>
 	<li><%= link_to teacher.teacher_name, teacher_path(teacher) %></li>
 	<li><%= link_to teacher.teacher_course, student_path(teacher) %></li>
 	<% end %>
 	</ul>


  </div>

  <div class="col-md-3"><!--Courses-->
  	<h4>Course Data</h4>
  	<ul>
  		<% @courses.each do |course| %>
 	<li><%= link_to course.course_name, course_path(course) %></li>
 	<li><%= link_to course.course_size, course_path(course) %></li>
 	<% end %>
 	</ul>
 </div>

</div>